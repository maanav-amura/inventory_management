<h1>Invoices </h1>

<table class="table table-hover" style="width: 60%">
  <tr>
    <th>InvoiceNo</th>
    <th>Total Price</th>
    <th>Show</th>
  </tr>
  <% @bills.each do |b| %>
    <tr>
      <td><%= b.id %></td>
      <td><%= b.total_price %></td>
      <td><%= link_to 'Show', invoice_path(b.id) %></td>
    </tr><br>
  <% end %>
</table>

