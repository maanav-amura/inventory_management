<div class="form-group">
  <div class="control-label col-sm-2">Name :</div>
  <div class="col-sm-10"><%= f.text_field(:name) %></div>
</div>
<div class="form-group">
  <div class="control-label col-sm-2">Price :</div>
   <div class="col-sm-10"><%= f.number_field(:price) %></div>
</div>
<div class="form-group">
  <div class="control-label col-sm-2">Capacity :</div>
  <div class="col-sm-10"><%= f.number_field(:capacity) %></div>
</div>
<div class="form-group">
  <div class="control-label col-sm-2">Available :</div>
  <div class="col-sm-10">
    Yes <%= f.radio_button :available, true, label: "True", label_class: "Available", value: true, inline: true, checked: true %>
    No <%= f.radio_button :available, false, label: "False", label_class: "Available", value: false, inline: true %>
  </div>
</div>
<div class="form-group">
  <div class="control-label col-sm-2">Factory :</div>
  <div class="col-sm-10"><%= f.select(:factory_id, Factory.all.map{|f| [f.name, f.id]}) %></div>
</div>
