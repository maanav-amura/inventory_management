<h1>Products</h1>

<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>
  </li>
<% end %>
<br>

<%= link_to('Create Product', :action=>'new')%><br>
  <table class="table table-hover">
    <tr>
      <td>Name</td>
      <td>Price</td>
      <td>Purchase</td>
    </tr>
    <%= form_for(:product, url: products_url) do |f| %>
    <% @products.each do |p| %>
    <tr>
      <td><%= p.name.capitalize %></td>
      <td><%= p.price %></td>
      <td><input type="checkbox" id= <%= p.name %>></td>
    </tr>
    <% end %>
    <tr><td><%= submit_tag('Purchase Product') %></td></tr>
  <% end %>
</table>
