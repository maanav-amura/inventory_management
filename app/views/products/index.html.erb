<h1>Products</h1>

<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>
  </li>
<% end %>
<br>

<%= link_to('Create Product', :action=>'new')%><br>
  <table class="table table-hover">
    <tr>
      <td>Name</td>
      <td>Price</td>
      <td>Capacity</td>
      <td>Available</td>
      <td>Show</td>
      <td>Edit</td>
      <td>Remove</td>
    </tr>
  <% @products.each do |p| %>
    <tr>
      <td><%= p.name %></td>
      <td><%= p.price %></td>
      <td><%= p.capacity %></td>
      <td><%= p.available ? 'Yes' : 'No' %></td>
      <td><%= link_to 'Show', product_path(p.id) %></td>
      <td><%= link_to 'Edit', edit_product_path(p.id) %></td>
      <td><%= link_to 'Remove', product_path(p.id), method: :delete %></td>
    </tr><br>
  <% end %>
</table>
